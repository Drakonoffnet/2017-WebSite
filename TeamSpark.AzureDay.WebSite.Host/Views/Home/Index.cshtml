			<div class="container">
				<div class="row">
					<div class="col-md-6">
					</div>
					<div class="col-md-6 text-center">
						<h1 class="maintitle" style="color: #fff;"></h1>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- end parallax -->

	<section class="introblock whites">
		<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
