							@Index.AzureDAY02b<br />
							 @Index.AzureDAY02c
							<span class='colortext'>@Index.AzureDAY02d</span>
						</span>
					</h1>
				</div>
			</div>
		</div>
	</section>

	@Html.Partial("_Speakers", Model.Speakers)

	<section class="bgsizecover" style="background-image: url('Theme/img/_bgnd/2017/010.jpg'); background-attachment: fixed; background-position: relative; height: 250px;">
		<div class="transp">
			<div class="container">
				<div class="row">
					<div class="col-md-6">
					</div>
					<div class="col-md-6 text-center">
