						<div class="box effect2">
							@Index.About06
						</div>
					</div>
				</div>

			</div>
		</div>

	</div>

	<section class="bgsizecover" style="background-image: url('Theme/img/_bgnd/2017/011.jpg'); background-attachment: fixed; background-position: relative; height: 250px;">
